@{
    ViewData["Title"] = "Home Page";
}
@model IndexViewModel
<div class="text-center">
    
    @if (ViewBag.TeamName != null)
    {
        <h1>@ViewBag.TeamName</h1>
    }
    else
    {
        <h1>Bowlers</h1>
    }
    
    <table class="table">
        <thead>
            <tr>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Middle Init</th>
                <th scope="col">Address</th>
                <th scope="col">City</th>
                <th scope="col">State</th>
                <th scope="col">Zip</th>
                <th scope="col">PhoneNumber</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var x in Model.Bowlers)
            {
            <tr>
                <td>@x.BowlerFirstName</td>
                <td>@x.BowlerLastName</td>
                <td>@x.BowlerMiddleInit</td>
                <td>@x.BowlerAddress</td>
                <td>@x.BowlerCity</td>
                <td>@x.BowlerState</td>
                <td>@x.BowlerZip</td>
                <td>@x.BowlerPhoneNumber</td>
            </tr>
            }
        </tbody>
    </table>
    <div Page-Info="@Model.PageNumberingInfo" Page-Url-Team="@ViewBag.TeamName"></div>
</div>
